<p id="notice"><%= notice %></p>

<h1>Issuances</h1>

<table>
  <thead>
    <tr>
      <th>Uuid</th>
      <th>Book</th>
      <th>Issuer</th>
      <th>Issued to</th>
      <th>Issuance date</th>
      <th>Return date</th>
      <th>Remark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issuances.each do |issuance| %>
      <tr>
        <td><%= issuance.uuid %></td>
        <td><%= issuance.book_id %></td>
        <td><%= issuance.issuer_id %></td>
        <td><%= issuance.issued_to_id %></td>
        <td><%= issuance.issuance_date %></td>
        <td><%= issuance.return_date %></td>
        <td><%= issuance.remark %></td>
        <td><%= link_to 'Show', issuance %></td>
        <td><%= link_to 'Edit', edit_issuance_path(issuance) %></td>
        <td><%= link_to 'Destroy', issuance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

